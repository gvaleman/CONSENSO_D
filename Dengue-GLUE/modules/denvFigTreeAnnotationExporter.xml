<figTreeAnnotationExporter>

	<figTreeAnnotation>
		<annotationName>sequenceID</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.sequenceID')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>serotype</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.serotype')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>genotype</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.genotype')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>major_lineage</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.major_lineage')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>minor_lineage</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.minor_lineage')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>minor_sublineage</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.minor_sublineage')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>combined</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.serotype')}/${renderNestedProperty('sequence.genotype')}/${renderNestedProperty('sequence.major_lineage')}/${renderNestedProperty('sequence.minor_lineage')}/${renderNestedProperty('sequence.minor_sublineage')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>combined-with-id</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.sequenceID')}/${renderNestedProperty('sequence.serotype')}/${renderNestedProperty('sequence.genotype')}/${renderNestedProperty('sequence.major_lineage')}/${renderNestedProperty('sequence.minor_lineage')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>isolate</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.isolate_data.isolate')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>country</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.isolate_data.country')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

	<figTreeAnnotation>
		<annotationName>collection_year</annotationName>
		<valueFreemarkerTemplate>${renderNestedProperty('sequence.isolate_data.collection_year')}</valueFreemarkerTemplate>
	</figTreeAnnotation>

</figTreeAnnotationExporter>
